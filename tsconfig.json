{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strict": false,
    "sourceMap": true,
    "noEmit": true,
    "jsx": "react",
    "allowJs": true,
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": ["node"],
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "rootDirs": ["src"]
  },
  "include": ["src/**/*", "src/node_modules"]
}
